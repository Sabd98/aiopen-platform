{
  "name": "aiplatform-be",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon dist/index.js",
    "nodemon": "nodemon --watch src --exec \"npx ts-node\" src/index.ts",
    "build": "tsc -p .",
    "start": "nodemon dist/index.js",
    "migrate:up": "node --loader ts-node/esm src/db/migrate.ts up",
    "migrate:down": "node --loader ts-node/esm src/db/migrate.ts down",
    "seed:up": "node --loader ts-node/esm src/db/migrate.ts seed:up",
    "seed:down": "node --loader ts-node/esm src/db/migrate.ts seed:down",
    "reset-db": "node --loader ts-node/esm src/db/resetAndMigrate.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/node": "^24.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.35",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.10",
    "ai": "^5.0.52",
    "bcrypt": "^6.0.0",
    "connect-session-sequelize": "^8.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "ts-node-dev": "^2.0.0",
    "zod": "^4.1.11"
  }
}
